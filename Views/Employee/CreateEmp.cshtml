@model project12.Models.Employee

@{
    ViewBag.Title = "Create Employee";
}

<h2>Create New Employee</h2>

<form asp-action="CreateEmp" method="post" enctype="multipart/form-data">
    <div class="form-group mb-4">
        <label asp-for="FirstName" class="font-weight-bold">First Name:</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="LastName" class="font-weight-bold">Last Name:</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="DateOfBirth" class="font-weight-bold">Date of Birth:</label>
        <input asp-for="DateOfBirth" class="form-control" type="date" />
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="Gender" class="font-weight-bold">Gender:</label>
        <select asp-for="Gender" class="form-control">
            <option value="Male">Male</option>
            <option value="Female">Female</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="Position" class="font-weight-bold">Position:</label>
        <input asp-for="Position" class="form-control" />
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="Salary" class="font-weight-bold">Salary:</label>
        <input asp-for="Salary" class="form-control" type="number" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="HireDate" class="font-weight-bold">Hire Date:</label>
        <input asp-for="HireDate" class="form-control" type="date" />
        <span asp-validation-for="HireDate" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="Email" class="font-weight-bold">Email:</label>
        <input asp-for="Email" class="form-control" type="email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="Phone" class="font-weight-bold">Phone:</label>
        <input asp-for="Phone" class="form-control" type="tel" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="DepartmentId" class="font-weight-bold">Department:</label>
        <select asp-for="DepartmentId" class="form-control" asp-items="@(new SelectList(ViewBag.Department, "DepartmentId", "DepartmentName"))">
            <option value="">Select Department</option>
        </select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
    </div>

    <!-- قسم رفع الصورة -->
    <div class="form-group mb-4">
        <label asp-for="ImageFile" class="font-weight-bold">Profile Image:</label>
        <input asp-for="ImageFile" type="file" class="form-control-file" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
